@*@model IEnumerable<MvcMovie.Models.Movie>*@
@model MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
               <option value="">All</option>
        </select>
        Title:<input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>

                <label asp-for="Movies[0].Title"></label>
                @* 等同于@Html.DisplayNameFor(model => model.Movies[0].ReleaseDate) *@
            </th>
            <th>
                
                <label asp-for="Movies[0].ReleaseDate"></label>
            </th>
            <th>
       
                <label asp-for="Movies[0].Genre"></label>
            </th>
            <th>
            
                <label asp-for="Movies[0].Price"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @* AnchorTagHelper 从控制器操作方法和路由 ID 动态生成 HTML href 特性值 *@
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
